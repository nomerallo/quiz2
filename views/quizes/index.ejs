<table>
<% 
var i;
for (i=0;i < quizes.length;i++){ %>
	<tr>
		<td>
			<a href = "/quizes/<%= quizes[i].id %>" > <%= quizes[i].pregunta %> </a>
		</td>
		<td>
			[<%= quizes[i].tema %>]
		</td>
		<% if(session.usuario){%>
		<td>
			<a href = "/quizes/<%= quizes[i].id %>/edit" ><button type="button">Editar</button> </a>
		</td>
		<td>
			<form method = 'post'  action = "quizes/<%= quizes[i].id %>?_method=delete" >
				<button type="submit" onclick='return confirm("Borrar: <%= quizes[i].pregunta %>")' > Borrar </button>
			</form>
		</td>
		<%}%>
	</tr>

	<p><a href = "/quizes"></a></p>
<%
}
%>
</table>

<form method = 'get' action='/quizes'>
	Ver solo las preguntas que contengan el siquiente texto:<p>
	<input type="text" name="search" placeholder="Responda aqui"/>  
	<input type ="submit" value="Enviar">
</form>

<% if(session.usuario){%><p><a href = "/quizes/new"><button type="button">Crear pregunta</button></a></p><%}%>
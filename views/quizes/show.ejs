<form method = 'get' action='/quizes/<%= quiz.id%>/answer'>
	Pregunta: <%= quiz.pregunta %><p>
	<input type="text" name="respuesta" placeholder="Responda aqui"/>  
	<input type ="submit" value="Enviar">
</form>
<% if(session.usuario){%>
<p><a href = "/quizes/<%= quiz.id %>/comments/new" ><button type ="submit" >Nuevo Comentario</button> </a></p>
<%}%>
<p<strong>Comentarios:</strong><p>
<% for(index in quiz.tabla_comentarios) { %>
	<% if(quiz.tabla_comentarios[index].publicado || session.usuario){%>
	<p>-  <%= quiz.tabla_comentarios[index].texto %></p>
		<% if( session.usuario && !quiz.tabla_comentarios[index].publicado){%>
		<a href = "/quizes/<%= quiz.id %>/comments/<%=quiz.tabla_comentarios[index].id%>/publish" ><button> Publicar </button> </a>
		<%}%>
	</p>
	<%}%>
<% } %>